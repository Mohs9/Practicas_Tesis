              \draw[dashed] (orig) ellipse (\r{} and \r/3);
              \draw[dashed] (\r/3,0) ellipse (\r/4 and \r/2);
            
              % Axes
              \draw[->] (orig) -- ++(-\r*0.25, -\r/3) node[below] (x1) {$ \hat{x}$};
              \draw[->] (orig) -- ++(\r, 0) node[right] (x2) {$ \hat{y}$};
              \draw[->] (orig) -- ++(0, \r) node[above] (x3) {$\hat{z}$};
             
            
